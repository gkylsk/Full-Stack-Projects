<!-- breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 py-4">

    <% if(typeof categoryById !== 'undefined' && categoryById.length > 0) { %>
        <% categoryById.forEach(function(Collection , index){ %>
    <a href="/collections/<%= Collection._id %>" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="/uploads/<%= Collection.image %>" alt="<%= Collection.name %>" loading="lazy">
        </div>
        <div class="pt-1"><%= Collection.name %></div>   
    </a>
    <% }) %>
    <% } else{ %>
        <p> No items found. </p>
    <% } %>

</div>
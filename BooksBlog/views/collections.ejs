<% if(collections != null) { %>
<!-- breadcrumb -->
<nav aria-label="breadcrumb"></nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- collections.name %></li>
    </ol>
</nav>

<div class="row">
    <!-- image column -->
    <div class="col-12 col-md-4">
        <img src="/uploads/<%- collections.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- collections.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12"><h1><%- collections.name %></h1></div>
            <div class="cole-12 mb-4"><i class="bi bi-book"> <%- collections.category %></i></div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Description</h4>
                <%- collections.description %>
            </div>
        </div>

        <div class="row pt-4">
            <div class="col-12">
                <h4>Author:</h4> <%- collections.author %>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-12">
                <h4>Rate:</h4> <%- collections.rate %>
            </div>
        </div>
        <br>
    </div>
</div>

<% }  else {%>
    <p>No item found</p>
<% } %>